{
  "version": 2,
  "builds": [
    {
      "src": "backend_tripzo/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "frontend_tripzo/**", 
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend_tripzo/server.js"
    },
    {
      "src": "/(.*\\.(?:js|css|ico|svg|png|jpg|jpeg|gif|avif|webp|html))",
      "dest": "frontend_tripzo/$1"
    },
    {
      "src": "/",
      "dest": "frontend_tripzo/index.html"
    },
    {
      "src": "/([^/]+\\.html)$",
      "dest": "frontend_tripzo/$1"
    }
  ]
}